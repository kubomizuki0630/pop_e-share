<div class="container_pt">
  <h2 class="mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class:"form-control form-control-lg mb-3", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :Number %><br />
      <%= f.text_field :number, class:"form-control form-control-lg mb-3", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control form-control-lg mb-3", autofocus: true, autocomplete: "email",placeholder: "1DS20000S" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control form-control-lg mb-3", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class:"form-control form-control-lg mb-4", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"btn btn-primary mb-3" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
